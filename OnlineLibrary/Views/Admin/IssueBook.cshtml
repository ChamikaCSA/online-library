@model OnlineLibrary.Models.Book

<h2 class="text-center mt-4">Issue Book</h2>

@if (TempData["IssueBookSuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["IssueBookSuccessMessage"]
    </div>
}

<form asp-action="IssueBook" method="post">
    <div class="form-group">
        <label for="adminId">Select Admin</label>
        <select id="adminId" name="adminId" class="form-control" required>
            <option value="">Select Admin</option>
            @foreach (var admin in ViewBag.Admins)
            {
                <option value="@admin.AdminID">@admin.AdminID : @admin.Username</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="bookId">Select Book</label>
        <select id="bookId" name="bookId" class="form-control" required>
            <option value="">Select Book</option>
            @foreach (var book in ViewBag.Books)
            {
                <option value="@book.BookID">@book.BookID : @book.Title</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="guestId">Select Guest (optional)</label>
        <select id="guestId" name="guestId" class="form-control">
            <option value="">Select Guest</option>
            @foreach (var guest in ViewBag.Guests)
            {
                <option value="@guest.GuestID">@guest.GuestID : @guest.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="guestName">Name</label>
        <input type="text" id="guestName" name="guestName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="guestEmail">Email</label>
        <input type="email" id="guestEmail" name="guestEmail" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Issue Book</button>
</form>
