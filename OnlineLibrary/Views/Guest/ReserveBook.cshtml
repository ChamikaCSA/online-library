@model OnlineLibrary.Models.Book

@{
    ViewData["Title"] = "Reserve Book";
}

<h2>Reserve Book</h2>

<h3>Are you sure you want to reserve this book?</h3>
<div>
    <h4>Book Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.Title
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Model.Author
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Genre
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>
    <hr />

    <div class="row justify-content-center">
        <form asp-action="ReserveBook" method="post">
            <input type="hidden" asp-for="BookID" />
            <div class="form-group">
                <label for="guestName">Your Name</label>
                <input type="text" name="guestName" class="form-control" required />
            </div>
            <div class="form-group">
                <label for="guestEmail">Your Email</label>
                <input type="email" name="guestEmail" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary">Reserve</button>
        </form>
     </div>
</div>
<div>
    <a asp-action="SearchBooks">Back to List</a>
</div>
