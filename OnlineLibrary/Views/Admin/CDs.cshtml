@model IEnumerable<OnlineLibrary.Models.CD>

@{
    ViewData["Title"] = "Manage CDs";
}

<h2 class="text-center mt-4">Manage CDs</h2>

<p>
    <a asp-action="AddCD" class="btn btn-primary">Add New CD</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cd in Model)
        {
            <tr>
                <td>@cd.CDID</td>
                <td>@cd.Title</td>
                <td>@cd.Artist</td>
                <td>@cd.Genre</td>
                <td>
                    <a asp-action="EditCD" asp-route-id="@cd.CDID">Edit</a> |
                    <a asp-action="DeleteCD" asp-route-id="@cd.CDID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Dashboard">Back to Dashboard</a>
</div>
