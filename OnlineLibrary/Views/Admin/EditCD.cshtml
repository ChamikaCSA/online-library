@model OnlineLibrary.Models.CD

@{
    ViewData["Title"] = "Edit CD";
}

<h2 class="text-center mt-4">Edit CD</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="EditCD" method="post">
            <input type="hidden" asp-for="CDID" />
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist"></label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="CDs">Back to List</a>
</div>
